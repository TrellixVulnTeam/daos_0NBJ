# Pull base image
ARG BASE_DISTRO=rockylinux/rockylinux:8
FROM $BASE_DISTRO
LABEL maintainer="daos@daos.groups.io"
# Needed for later use of BASE_DISTRO
ARG BASE_DISTRO

# Intermittent cache-bust.  Used to reduce load on the actual CACHEBUST later.
ARG CB0

ARG REPO_FILE_URL
ARG JENKINS_URL
ARG REPOS
# script to translate lookup distro names to commonly used names
COPY ci/rpm/distro_info.sh /tmp/distro_info.sh
# script to install OS updates basic tools and maldet
COPY ci/rpm/install_maldet.sh /tmp/install.sh
# script to setup local repo if available
COPY ./utils/scripts/repo-helper-el8.sh /tmp/repo-helper.sh
RUN set -e;                                         \
    chmod +x /tmp/repo-helper.sh /tmp/install.sh && \
    /tmp/repo-helper.sh

# Add DAOS users
ARG UID=1000
COPY ./utils/scripts/daos-sudo-setup.sh /tmp/daos-sudo-setup.sh

# force an upgrade to get any newly built RPMs, but only if CB1 is set.
ARG CB1
RUN [ -z "$CB1" ] || {                                   \
        dnf upgrade && dnf clean all;                    \
    }

ARG BUILD_URL
COPY ci/rpm/build_url_repo.sh /tmp/build_url_repo.sh
RUN /tmp/build_url_repo.sh
